{
  "compilerOptions": {
    "target": "es2015",
    "module": "ESNext",
    "declaration": true,
    "noEmit": true,
    "isolatedModules": true,
    "declarationDir": "./@types",
    "declarationMap": false,
    "diagnostics": true,
    "moduleResolution": "Node",
    "strict": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "listFiles": true,
    "lib": [
      "ES2015.Core",
      "DOM",
      "ESNEXT"
    ],
    "strictPropertyInitialization": false,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": false,
    "sourceMap": false,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "./src/*",
  ],
  "exclude": [
    "dev/**/*",
    "node_modules/**/*"
  ]
}